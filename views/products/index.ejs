<%- include('../layout/main.ejs') %>
 
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="/products">Products</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        
                      
                         
                          
                          <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                          </li>
                         <li class="nav-item"></li>
                            <a class="nav-link" href="/registration">Registration</a>
                          </li>
                    </ul>
                    <form class="d-flex">
                        <a href="/carts" class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill" id="cartCount"><%=num%></span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Products store</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Our products</p>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <%for (let i = 0; i < count; i++) { %>
                        
               <!--copy -->     <div class="col mb-5">
                <div class="card h-100">
                    <!-- Sale badge-->
                    <%if(product[i].sale){%>
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                    <%  } %>
                    <!-- Product image-->
                    <img class="card-img-top" src="<%=product[i].image%>" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder"><%=product[i].name%></h5>
                            <!-- Product reviews-->
                             <%if(product[i].Star){%>
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <%  } %>
                            <!-- Product price-->
                            <%if(product[i].sale){%>
                             <span class="text-muted text-decoration-line-through">$<%=product[i].price%></span>
                             $<%=product[i].SalePrice%>
                          
                             <%  }else{ %>
                             $<%=product[i].price%>
                             <%  } %>
                            

                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class=" text-center">
                            <form action="/products" method="post" >
                            <a class="btn btn-outline-dark mt-auto" href="/products/<%=product[i].name%>">View options</a>
                            <button 
                            type="submit" 
                            class="btn btn-outline-dark mt-auto"
                            name="productName"
                            value="<%=product[i].name%>"
                            >Add to cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!--copy --> 
                        
                   <% }%>
                  
                </div>
            </div>
        </section>
        <!-- Footer-->
<!-- Footer-->
<%- include('../layout/footer.ejs') %>


