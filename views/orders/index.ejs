<%- include('../layout/main.ejs') %>

<!-- Navigation-->
<%- include('../layout/navbar.ejs') %>
<!-- Header-->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">All your ordered products.</h1>
    </div>
  </div>
</header>
<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div
      class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
    >
      <%for (let i = 0; i < num; i++) { %>

      <!--copy -->
      <div class="col mb-5">
        <div class="card h-100">
          <!-- Sale badge-->
          <%if(orders[i].sale){%>
          <div
            class="badge bg-dark text-white position-absolute"
            style="top: 0.5rem; right: 0.5rem"
          >
            Sale
          </div>
          <% } %>
          <!-- Product image-->
          <img class="card-img-top" src="<%=orders[i].image%>" alt="..." />
          <!-- Product details-->
          <div class="card-body p-4">
            <div class="text-center">
              <!-- Product name-->
              <h5 class="fw-bolder"><%=orders[i].name%></h5>
              <!-- Product reviews-->
              <%if(orders[i].Star){%>
              <div
                class="d-flex justify-content-center small text-warning mb-2"
              >
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
              </div>
              <% } %>
              <!-- Product price-->
              <%if(orders[i].sale){%>
              <span class="text-muted text-decoration-line-through"
                >$<%=orders[i].price%></span
              >
              $<%=orders[i].SalePrice%> <% }else{ %> $<%=orders[i].price%> <% }
              %>
              <h5 class="fw-bolder">
                Ordered in <%if(orders[i].createdAt.getMonth()+1>9){%>
                <%=orders[i].createdAt.getDate()%>.
                <%=orders[i].createdAt.getMonth()+1%>.
                <%=orders[i].createdAt.getFullYear()%> <% }else{ %>
                <%=orders[i].createdAt.getDate()%>.
                0<%=orders[i].createdAt.getMonth()+1%>.
                <%=orders[i].createdAt.getFullYear()%> <% } %>
                <%=orders[i].createdAt.getHours()%>:<%=orders[i].createdAt.getMinutes()%>
              </h5>
            </div>
          </div>
          <!-- Product actions-->
        </div>
      </div>
      <!--copy -->

      <% }%>
    </div>
  </div>
</section>
<!-- Footer-->
<%- include('../layout/footer.ejs') %>
